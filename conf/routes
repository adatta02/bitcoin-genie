# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()
GET     /game/:id                   controllers.Application.game(id: Int)
GET     /redeem/:key                controllers.Application.redeem(key: String)

POST    /get-hash                   controllers.Application.getHash()
GET     /random-phrases             controllers.Application.getRandomPhrases()

POST    /play-deal/:id              controllers.Application.playDeal(id: Int)

GET     /util/:action                controllers.Application.util(action: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
